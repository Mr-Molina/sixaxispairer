{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: configure",
            "command": "cmake",
            "args": [
                "-DHIDAPI_ROOT_DIR=${workspaceFolder}/hidapi-win",
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "CMake: build",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "CMake: configure"
            ]
        },
        {
            "label": "Copy DLL to build directory",
            "type": "shell",
            "command": "copy",
            "args": [
                "${workspaceFolder}\\hidapi-win\\x64\\hidapi.dll",
                "${workspaceFolder}\\build\\"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}